        <!--UPDATE TITLE-->
        <form class="update" action="/restaurants/{{restaurant.id}}/menus/{{menu.id}}/editMenu" method="POST">
            <label for="title">Current Menu Title:</label> 
            <h4>{{menu.title}}</h4><br>
